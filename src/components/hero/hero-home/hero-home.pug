.hero-home(v-if='props')
  .hero-home__background(:style="{ backgroundImage: 'url(' + props.image + ')' }")
  .hero-home__container
    .hero-home__column
      .hero-home__title.hero-text--home(v-html='props.title')
      .hero-home__subtitle.hero-text--home(v-html='props.subtitle')
      router-link.hero-home__button(v-html='props.button', :to='props.button_link')
      .hero-home__card
        h5.hero-home__title-card(v-html='props.card.title')
        .hero-home__body(v-html='props.card.body')
        .hero-home__details(v-html='props.card.details')
        a.hero-home__button-card(v-html='props.card.button', :href='props.card.button_link')
  .hero-home__card-container
    .hero-home__card.hero-home__card--mobile
      h5.hero-home__title-card(v-html='props.card.title')
      .hero-home__button-container
        BaseIcon.hero-home__icon(name='chevron')
        .hero-home__button-details(
          @click='toggleDetails', 
          v-html="details ? 'Hide Details' : 'Show Details'",
          :class="{ 'hero-home__button-details--hide': details }")
      .hero-home__content(:class="{ 'hero-home__content--active': details }")
        .hero-home__body(v-html='props.card.body')
        .hero-home__details(v-html='props.card.details')
      a.hero-home__button-card(v-html='props.card.button', :href='props.card.button_link')
        
